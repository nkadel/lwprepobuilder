[lwprepo]
name=LWP $releasever - $basearch
baseurl=file://@@@REPOBASEDIR@@@/lwprepo/$releasever/$basearch
enabled=0
gpgcheck=0
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-schol
# Set very, very short for RPM building
metadata_expire=1

[lwprepo-source]
name=LWP $releasever - Source
baseurl=file://@@@REPOBASEDIR@@@/lwprepo/$releasever/SRPMS
enabled=0
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-schol
# Set very, very short for RPM building
metadata_expire=1
